<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    app:cardCornerRadius="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/model_4">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fotoProducto"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del Producto"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/nombreProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del Producto"
                android:textColor="#E7A121" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo del Producto"
                android:textStyle="bold"/>

            <TextView

                android:id="@+id/tipoProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo del Producto"
                android:textColor="#E7A121" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripcion del Producto"
                android:textStyle="bold"/>

            <TextView

                android:id="@+id/descpProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripcion del Producto"
                android:textColor="#E7A121" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Precio del Producto en BS"
                android:textStyle="bold"/>

            <TextView

                android:id="@+id/precioProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Precio del Producto"
                android:textColor="#E7A121" />
            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="presioname"
                android:textColor="@color/white"
                android:id="@+id/botonPrecioname"
                android:background="@drawable/model_2"/>
            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminame"
                android:id="@+id/botonEliminame"
                android:background="@drawable/model_4"
                android:textColor="#E7A121"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>